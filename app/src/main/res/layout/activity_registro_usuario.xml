<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#72BEC3"
    tools:context=".RegistroUsuario">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/lbl_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="@string/tvw_usuario"
                android:textAlignment="center"
                android:textSize="34sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/txt_curp"
                    android:layout_width="245dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:ems="10"
                    android:hint="@string/etx_curp"
                    android:inputType="textPersonName"
                    android:textAlignment="center"
                    tools:ignore="TouchTargetSizeCheck" />

                <Button
                    android:id="@+id/btn_verifica_curp"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text="Verifica curp"
                    android:textAlignment="center" />

            </LinearLayout>

            <EditText
                android:id="@+id/txt_nombre_padre_tutor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:hint="@string/etx_nombres"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:enabled="false"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/txt_apellido_paterno"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:hint="@string/etx_apaterno"
                android:inputType="textPersonName"
                android:enabled="false"
                android:textAlignment="center"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/txt_apellido_materno"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:hint="@string/etx_amaterno"
                android:inputType="textPersonName"
                android:enabled="false"
                android:textAlignment="center"
                tools:ignore="TouchTargetSizeCheck" />



            <EditText
                android:id="@+id/txt_nombre_paciente"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:hint="@string/nombre_paciente"
                android:inputType="textPersonName"
                android:textAlignment="center"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/txt_correo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:hint="@string/etx_correo"
                android:inputType="textEmailAddress"
                android:textAlignment="center"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/txt_contrasena"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:hint="@string/etx_contrasena"
                android:inputType="textPassword"
                android:textAlignment="center"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/txt_nip"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:hint="@string/etx_nip"
                android:inputType="numberSigned"
                android:textAlignment="center"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/btn_pagar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#3F51B5"
                android:text="Pagar (opiconal)"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <Button
                    android:id="@+id/btn_registrarse"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="@string/btn_registrarse"
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/btn_cancelar"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="72dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:onClick="ir_main"
                    android:text="Cancelar"
                    android:textAlignment="center" />

            </LinearLayout>

            <TextView
                android:id="@+id/lbl_tengo_cuenta"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:onClick="ir_inicio_de_sesion"
                android:text="@string/tvw_yatengo"
                android:textAlignment="center"
                android:textSize="18sp"
                tools:ignore="TouchTargetSizeCheck" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>