<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".psicologo.cuentaPsicologo.cuentaPsicologoFragment"
    android:background="#72BEC3">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="-107dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lbl_psicologo"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center"
                android:text="@string/lbl_psicologo"
                android:textSize="34sp" />

            <ImageView
                android:id="@+id/im_foto_Psicologo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:src="@tools:sample/avatars" />

            <EditText
                android:id="@+id/txt_NombrePsicologo"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="10"
                android:gravity="center"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:text="@string/txt_NombrePsicologo"
                android:textColor="#5E5D5D" />

            <EditText
                android:id="@+id/txt_ApellidoP_Psicologo"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="10"
                android:gravity="center"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:text="@string/txt_ApellidoP_Psicologo"
                android:textColor="#5E5D5D" />

            <EditText
                android:id="@+id/txt_ApellidoM_Psicologo"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="10"
                android:gravity="center"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:text="@string/txt_ApellidoM_Psicologo"
                android:textColor="#5E5D5D" />

            <EditText
                android:id="@+id/txt_Direccion_Consultorio"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="10"
                android:gravity="center"
                android:inputType="textPostalAddress"
                android:minHeight="48dp"
                android:text="@string/txt_Direccion_Consultorio"
                android:textColor="#5E5D5D" />

            <EditText
                android:id="@+id/txt_CorreoContacto_Psicologo"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="10"
                android:gravity="center"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                android:text="@string/txt_CorreoContacto_Psicologo"
                android:textColor="#5E5D5D" />

            <EditText
                android:id="@+id/txt_Telefono_Psicologo"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="10"
                android:gravity="center"
                android:inputType="phone"
                android:minHeight="48dp"
                android:text="@string/txt_Telefono_Psicologo"
                android:textColor="#5E5D5D" />

            <EditText
                android:id="@+id/txt_Cedula"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="10"
                android:gravity="center"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:text="@string/txt_Cedula"
                android:textColor="#5E5D5D" />

                <com.github.barteksc.pdfviewer.PDFView
                    android:id="@+id/pdf_view_cuenta_psicologo"
                    android:layout_width="350dp"
                    android:layout_height="300dp"
                    android:layout_gravity="center">

                    <ProgressBar
                        android:id="@+id/pb_progreso_pdf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:progressDrawable="@color/purple_500" />

                </com.github.barteksc.pdfviewer.PDFView>



            <Button
                android:id="@+id/btn_Verificar_Cedula"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/btn_Verificar_Cedula" />




            <Button
                android:id="@+id/btn_Editar_Psicologo"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/btn_Editar_Psicologo" />



            <Button
                android:id="@+id/btn_Guardar_Psicologo"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/btn_Guardar_Psicologo" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>